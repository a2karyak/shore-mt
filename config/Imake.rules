#if IS_DOSDEV
#define EXENAME(exec) exec.EXEEXT
#define GLOBAL_LD_OUTFLAGS(exec) -out$(COLON)$(strip EXENAME(exec))
#define AR_OUTFLAGS(lib)	-out$(COLON)lib
#define nt_exe_dep(exec) exec: EXENAME(exec) ;

#define GLOBAL_LD_DLL_OUTFLAGS(dll) -out$(COLON)$(strip dll)

#ifndef add_rc_file
#define add_rc_file(group, rc_file)						\
$(patsubst %.rc,%.res,$(notdir rc_file)): rc_file				@@\
	xlate_names($(compile.RC) $<)						@@\
$(strip group).other += rc_file							@@\
$(strip group).gen.other += $(patsubst %.rc,%.res,$(notdir rc_file))		@@\
$(strip group).objs += $(patsubst %.rc,%.res,$(notdir rc_file))
#endif

#ifndef add_common_ncr_rc_file
#define add_common_ncr_rc_file(group)						\
ifndef DEFINED_NCR_COMMON_RES							@@\
DEFINED_NCR_COMMON_RES = 1							@@\
init_file_group(ncr_res_group)							@@\
add_rc_file(ncr_res_group, $(COMMON_NCR_RC_FILE))				@@\
endif										@@\
add_to_group(group, ncr_res_group)						@@\
$(strip group).objs += $(ncr_res_group.objs)
#endif

#ifndef build_bsc_file
#define build_bsc_file(exec, libs)						@@\
