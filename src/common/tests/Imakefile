STAT_FILES_T = \
	test_stat_collect_enum_gen.h	\
	test_stat_collect_gen.cpp	\
	test_stat_def_gen.h		\
	test_stat_inc_gen.cpp		\
	test_stat_msg_gen.h		\
	test_stat_out_gen.cpp		\
	test_stat_stat_gen.cpp		\
	test_stat_struct_gen.h

INCLUDE_DIRS += \
	$(COMMON_INCL)	\
	$(FC_INCL)	\
	$(STHREAD_INCL)	\
	$(SM_INCL)

LIBS = \
	$(COMMON_LIB)	\
	$(FC_LIB)

all_target_files(tests)

PURE_OPT += -best-effort

#define test(testName)				@@\
init_file_group(testName)			@@\
testName.cpp += testName.cpp			@@\
testName.libs += $(LIBS)			@@\
testName.exec_name = testName			@@\
build_test_exec(testName)


test(testserial)
test(errcodes)
test(kvl)
test(vectors)
test(opaque)
test(bitmap)

init_file_group(stats)
stats.cpp += stats.cpp test_stat.cpp
stats.h += test_stat.h
stats.libs += $(LIBS)
stats.exec_name = stats
gen_statistics(stats, test_stat.dat, $(STAT_FILES_T))
build_test_exec(stats)

init_file_group(common_test_files)
common_test_files.other += 			\
	all					\
	bitmap.out				\
	kvl.out					\
	opaque.out				\
	stats.out				\
	testserial.out				\
	vectors.out

used_group(common_test_files)
