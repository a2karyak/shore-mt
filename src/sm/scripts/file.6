#
#	Test Create, Destroy, Read of Records
#
source $script_dir/vol.init

set_config_info

set num_rec [expr $page_size/2]


# change hdr and body definitions to use zvecs
#
# set id_hdr_width zvec%d
set id_hdr_width zvec6
# set id_body_width zvec%d
set id_body_width zvec8

proc check_zhdr { i sizes }  {
    global id_hdr_width
    set id [format $id_hdr_width $i]
    scan $id "zvec%d" width
    scan $sizes "size(h.b)=%d.%d" h b
    echo HDR: $i $id width=$width
    assert {expr $width == $h}
}
proc check_zbody { i sizes }  {
    global id_body_width
    set id [format $id_body_width $i]
    scan $id "zvec%d" width
    scan $sizes "size(h.b)=%d.%d" h b
    echo BODY: $i $id width=$width
    assert {expr $width == $b}
}

# source $script_dir/file.3a

###############################################
#   insert num_rec records
#
sm begin_xct
set fid [sm create_file $volid regular]

set rid(0) $null_rid
echo creating $num_rec 
for {set i 1} {$i <= $num_rec} {incr i} {
    set rid($i) [
	sm create_rec $fid [format $id_hdr_width $i] 10 [format $id_body_width $i]
    ]
}

echo getting stats before abort of record creations
dstats $volid

echo aborting
sm abort_xct

echo after abort
sm begin_xct

echo getting stats after abort of record creations
dstats $volid

echo recreating $num_rec
set fid [sm create_file $volid regular]

set rid(0) $null_rid
echo creating $num_rec 
for {set i 1} {$i <= $num_rec} {incr i} {
    set rid($i) [
	sm create_rec $fid [format $id_hdr_width $i] 10 [format $id_body_width $i]
    ]
}
dstats $volid
sm commit_xct

###############################################
#   read inserted records
#
echo reading $num_rec
sm begin_xct
for {set i 1} {$i <= $num_rec} {incr i} {
    catch {unset r}
    set r [sm read_rec $rid($i) 0 0]
    set id [format $id_hdr_width $i]
    set id_body [format $id_body_width $i]
    verbose $i $id $id_body $r
    set hdr [lindex $r 2]
    set body [lindex $r 4]
	check_zhdr $i [lindex $r 1]
	check_zbody $i [lindex $r 1]
}

echo scanning after separate scan using pin
verbose [sm scan_recs $fid]

sm commit_xct

###############################################
#   delete all odd records
echo delete all odd records
sm begin_xct
set abort_check 2
while {$abort_check >= 1} {
    sm abort_xct
    sm begin_xct
    echo checking stats after destroy was aborted
	dstats $volid
    echo destroying [expr $num_rec/2]
    for {set i 1} {$i <= $num_rec} {incr i; incr i} {
	sm destroy_rec $rid($i)
    }
    set abort_check [expr {$abort_check - 1}]

    echo checking stats after destroy
	dstats $volid
}
sm commit_xct

###############################################
#   re-read even records
#
echo re-read even records
sm begin_xct
for {set i 2} {$i <= $num_rec} {incr i; incr i} {
    set r [sm read_rec $rid($i) 0 0]
    set id [format $id_hdr_width $i]
    set id_body [format $id_body_width $i]
    verbose $i $id $id_body $r
    set hdr [lindex $r 2]
    set body [lindex $r 4]
    check_zhdr $i [lindex $r 1]
    check_zbody $i [lindex $r 1]
}
echo trying an odd record -- THIS SHOULD GENERATE AN ERROR
catch {[sm read_rec $rid(1) 0 0]} result
echo $result

echo trying an even record
echo [sm read_rec $rid(2) 0 0]

dstats $volid
echo volume_quota [sm get_volume_quota $volid]

sm commit_xct

echo volume_quota [sm get_volume_quota $volid]
echo sm_stats [sm gather_stats]

sm begin_xct

echo destroying all records ...
set scan [sm scan_file_create $fid t_cc_file]
echo scan_file_create returned $scan
set pin [sm scan_file_next $scan 0]
echo scan_file_next returned $pin
while {$pin != "NULL"} {
    sm destroy_rec [sm pin_rid $pin]
    set pin [sm scan_file_next $scan 0]
	echo scan_file_next returned $pin
}
sm scan_file_destroy $scan

echo destroying file $fid
sm destroy_file $fid
sm commit_xct

sm begin_xct
dstats $volid
echo volume_quota [sm get_volume_quota $volid]
echo sm_stats [sm gather_stats]
sm commit_xct

unset rid
unset r

unset result id_body id fid hdr num_rec abort_check i body
unset pin scan

