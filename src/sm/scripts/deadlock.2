# Test Upgrade deadlock detection
#
#    {1SH, 2SH} <-- 1EX
#    {1EX} <-- 2SH
#

set o1 "10"
set o2 "20"

proc t1 {} {
    global o1 o2
    sm begin_xct
    sm lock $o1 SH LONG
    sm lock $o2 EX LONG
    echo "t1: acquired SH on o1, EX on o2"
    sync
    echo "t1: attempting to acquire EX on o1"
    sm lock $o1 EX LONG
    sm commit_xct
}

proc t2 {} {
    global o1 o2
    sm begin_xct
    echo "t2: attempting to acquire SH on o1"
    sm lock $o1 SH LONG
    echo "t2: acquired SH on o1"
    sync
    sync
    echo "t2: attempting to acquire SH on o2"

    # catch deadlock
    echo catch deadlock:
    catch {sm lock $o2 SH LONG} errorno
    echo "error is $errorno"
    assert {error_is $errorno E_DEADLOCK}

    sm commit_xct
}

# same as t1, but use record stuff instead.
proc tt1 {o1 o2} {
    sm begin_xct

# SH on o1
    echo [sm read_rec $o1 0 0]
# EX on o2
    sm append_rec $o2 zzz
    echo "t1: acquired SH on o1, EX on o2"
    sync
    echo "t1: attempting to acquire EX on o1"
# EX on o1
    sm append_rec $o1 zzz
    sm commit_xct
}

# same as t2, but use record stuff instead.
proc tt2 {o1 o2} {
    sm begin_xct
    echo "t2: attempting to acquire SH on o1"

# SH on o1
    echo [sm read_rec $o1 0 0]
    echo "t2: acquired SH on o1"
    sync
    sync
    echo "t2: attempting to acquire SH on o2 with read"

    # catch deadlock
# SH on o2
    set errorno 0
    echo catch deadlock:
    catch {echo [sm read_rec $o2 0 0]} errorno
    echo "error is $errorno"
    assert {error_is $errorno E_DEADLOCK}
    sm commit_xct
}

####  main  ####

source $script_dir/vol.init

echo main

set x [fork_thread t1 {}]
echo x $x
set y [fork_thread t2 {}]
echo y $y

echo sync
sync_thread $x $y
echo sync
sync_thread $y
echo join
join_thread $x $y

echo new tx
