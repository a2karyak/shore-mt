#
# start up
#
source $script_dir/vol.init

set nrec 150
set u "2.-1500.-1500.1500.1500"

#
# create rtree 
#
sm begin_xct
set ndx [sm create_md_index $volid 2 rtree]
echo created rtree $ndx
sm commit_xct

#
# load and abort 
#
sm begin_xct
for {set i 1} {$i <= $nrec} {incr i} {
    set box($i) [sm next_box $u]
#    echo inserting $box($i) $i
    sm create_md_assoc $ndx $box($i) $i
}
echo inserted $nrec entries
sm rtree_stats $ndx
#sm draw_rtree $ndx
#sm print_md_index $ndx
sm abort_xct

#
# reload
#
sm begin_xct
for {set i 1} {$i <= $nrec} {incr i} {
#    echo inserting $box($i) $i
    sm create_md_assoc $ndx $box($i) $i
}
echo inserted $nrec entries
#sm draw_rtree $ndx
#sm print_md_index $ndx
sm commit_xct

sm begin_xct
echo probe:
for {set i 1} {$i <= $nrec} {incr i} {
#    echo $i $box($i)
    set el [sm find_md_assoc $ndx $box($i)]
    assert {expr $i == $el}
}
echo "---- successful"

sm commit_xct

sm begin_xct

set q "2.-500.-500.500.500"
#set q "2.-1500.-1500.1500.1500"

sm rtree_query $ndx / $q
sm rtree_query $ndx || $q
sm rtree_query $ndx << $q

sm commit_xct

unset nrec ndx box q u el i
