#
#	Test Create, Destroy of Large Records
#
# Also fills the volume and then aborts last operation. 
#

source $script_dir/vol.init

set_config_info

set long_len [expr $lg_rec_page_space * 50]

set long_body [format %0$long_len\d  1]

echo length of long_body [string length $long_body]

sm begin_xct
set fid [sm create_file $volid regular]
sm commit_xct

set loops 10

set errorno 0
set i 0
while {1} {
    echo loop $i
    sm begin_xct
	set caught [
	    catch  {
		set r [
		    sm create_rec $fid $i 10 $long_body 
		]
		echo creating long
		sm create_rec $fid $i 10 $long_body 

	    } errorno
	]
	if {$caught} {
	    echo EXPECTED error during create: $errorno
		echo aborting...
	    sm abort_xct
	    break
	}
    sm commit_xct

    sm begin_xct
	echo destroying 
	sm destroy_rec $r
    sm commit_xct
    incr i
}

echo SPACE BEFORE DESTROY
dstats $volid

sm begin_xct
sm destroy_file $fid

echo
echo volume_quota [sm get_volume_quota $volid]
echo sm_stats [sm gather_stats]
sm commit_xct

echo SPACE AFTER DESTROY
dstats $volid

unset r loops long_body long_len caught fid i errorno
