#
#	Test sort on spatial objects (2-dimensional boxes)
#
source $script_dir/vol.init

set nrec 200
set u "2.-1500.-1500.1500.1500"

#create and load a file with 2-d spatial objects
sm begin_xct
set f1 [sm create_file $volid]
echo f1 = $f1
for {set i 0} {$i < $nrec} {incr i} {
    set b [sm next_box $u]
    sm create_sort_rec $f1 $b 16 $b spatial
}
#echo scans on f1...
#echo [sm scan_sorted_recs $f1 string]
sm commit_xct

#sort and display
sm begin_xct
echo sort ...
set f2 [sm sort_file $f1 $volid 3 spatial 16 normal keep regular $u]
echo f2 = $f2

echo scans on f2 ...
echo [sm scan_sorted_recs $f2 spatial $u]

#sm destroy_file $f1
#sm destroy_file $f2
sm commit_xct

unset b i u f2 nrec f1
