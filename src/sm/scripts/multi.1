#  Testing the following multi-thread-per-tx scenarios
#
#  scenario 1
#  thread 1: EX lock o1,o2,o3
#  thread 2-a: SH lock o1 blocks in lock manager
#  thread 2-b: SH lock o1 blocks on cond variable
#  thread 2-c: SH lock o2 blocks on cond variable
#  thread 2-d: SH lock o3 blocks on cond variable
#  thread 1: commits, other 4 threads wake up
#
set_config_info

# source $script_dir/vol.init

if {$multi_threaded_xct == 0 } {
	echo "Not configured for multi-threaded xcts"
} else {

set o1			"k(s(10.0).100.200)"
set o2			"k(s(10.0).100.340)"
set o3			"k(s(10.0).300.999)"

proc t1 {} {
    global volid o1 o2 o3
    sm begin_xct
	set x [sm xct]
	echo TX $x sync
sync
	echo TX start tid = $x
	sm lock $o1 EX LONG
	sm lock $o2 EX LONG
	sm lock $o3 EX LONG
	echo TX $x sync
sync
	echo TX $x committing
    sm commit_xct
	echo TX $x committed
}
proc t2 {x o} {
    sm attach_xct $x
	echo TX $x sync
sync
	echo TX $x.$o locking
	sm lock $o SH LONG
	echo TX $x.$o acquired, sync
sync
	echo TX $x.$o done
    sm detach_xct $x
	echo detach done
}

##########  main  ##########

	sm begin_xct

	set tx [sm xct]
	echo started TX $tx
    set y1 [fork_thread t2 {$tx $o1}]
    set y2 [fork_thread t2 {$tx $o2}]
    set y3 [fork_thread t2 {$tx $o3}]
	echo started 3 threads for t2
	sm detach_xct $tx

    set x [fork_thread t1 {}]

    echo sync_thread $x $y1 $y2 $y3
    sync_thread $x $y1 $y2 $y3

    echo sync_thread  $x $y1 $y2 $y3
    sync_thread $x $y1 $y2 $y3

    echo join_thread $x $y1 $y2 $y3
    join_thread $x $y1 $y2 $y3

	echo WARNING sm state_xct is fragile
	set s [sm state_xct $tx]
	if {$s == 1} {
		sm attach_xct $tx
		sm commit_xct
	}
echo "SUCCESS"
unset tx o1 o2 o3  s
unset y1 y2 y3 x
}
