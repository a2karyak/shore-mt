#
#	Test file create and destroy
#

source $script_dir/vol.init

echo configuration info: [sm config_info]

sm begin_xct
set f0 [sm create_file $volid]]
sm commit_xct
echo restart
restart

echo begin

sm begin_xct
sm destroy_file $f0
sm commit_xct


sm begin_xct
    set f1 [sm create_file $volid]
    set f2 [sm create_file $volid]
    echo f1 = $f1
    echo f2 = $f2
sm commit_xct

dstats $volid
sm begin_xct
echo volume_quota [sm get_volume_quota $volid]
set free_before [lindex [sm get_volume_quota $volid] 1]
echo destroy files $f1 and $f2 
sm destroy_file $f1
sm destroy_file $f2
echo volume_quota [sm get_volume_quota $volid]
set free_after [lindex [sm get_volume_quota $volid] 1]
assert {expr {$free_before > $free_after}}
sm commit_xct
dstats $volid

unset f0
unset f1
unset f2
unset free_before
unset free_after
