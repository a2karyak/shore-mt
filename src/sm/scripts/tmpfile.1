#
#	Test Temp files
#
source $script_dir/vol.init

set num_rec 2000
set id_width %06d

if [is_set rid] {
   unset rid
}

# First, see if you can abort the creation
# of a temp file
sm begin_xct
echo tid [sm xct_to_tid [sm xct]]
set tfid [sm create_file $volid tmp]
set trid(0) $null_rid
echo timing the create of $num_rec NO LOG
echo [time {
    for {set i 1} {$i <= $num_rec} {incr i} {
	set trid($i) [
	    sm create_rec $tfid [format $id_width $i] 10 data.[format %01000d $i]
	]
    }
} 1]

echo ABORTING the creation of a temp file
sm abort_xct


sm begin_xct
echo tid [sm xct_to_tid [sm xct]]
set tfid [sm create_file $volid tmp]

set trid(0) $null_rid
echo timing the create of $num_rec NO LOG
echo [time {
    for {set i 1} {$i <= $num_rec} {incr i} {
	set trid($i) [
	    sm create_rec $tfid [format $id_width $i] 10 data.[format %01000d $i]
	]
    }
} 1]

sm commit_xct

sm begin_xct
echo tid [sm xct_to_tid [sm xct]]

set fid [sm create_file $volid regular]

set rid(0) $null_rid
echo timing the create of $num_rec WITH LOG
echo [time {
    for {set i 1} {$i <= $num_rec} {incr i} {
	set rid($i) [
	    sm create_rec $fid [format $id_width $i] 10 data.[format %01000d $i]
	]
    }
} 1]

sm commit_xct

proc t_timeit { num_rec op finish } {
    global trid

    sm begin_xct
    echo tid [sm xct_to_tid [sm xct]]
    echo timing the update of $num_rec NO LOG
    echo [time {
	for {set i 1} {$i <= $num_rec} {incr i} {
	    sm $op $trid($i) 0 "ABCDEFGHIJKLMNOPQRST" 
	}
    } 1]

    echo $finish
    sm $finish
}

proc timeit { num_rec op finish } {
    global rid

    sm begin_xct
    echo tid [sm xct_to_tid [sm xct]]
    echo timing the update of $num_rec WITH LOG
    echo [time {
	for {set i 1} {$i <= $num_rec} {incr i} {
	    sm $op $rid($i) 0 "ABCDEFGHIJKLMNOPQRST" 
	}
    } 1]

    echo $finish
    sm $finish
}

t_timeit $num_rec update_rec commit_xct
timeit $num_rec update_rec commit_xct

t_timeit $num_rec update_rec abort_xct
t_timeit $num_rec update_rec restart


unset rid
unset tfid trid fid num_rec i id_width
