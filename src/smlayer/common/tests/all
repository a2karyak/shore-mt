function run_kvl {
    kvl 3.2 abc 
    kvl 3.2 abc xxxx
    kvl 1.8 Paradise Paradise
}

function execute  {
    print -n "$1\t--> running --> "
    print "running $1" >> $2

    if [[ -a $3 ]]; then
	of=/tmp/$$
	if $1 1> $of 2> $of.err ; then
	    if diff $of $3 >> $2; then
		print "ok"
	    else
		print "diff failed"
	    fi
	else
	    print "run failed"
	fi
	cat $of >> $2
	rm $of

    elif $1 >> $2 2>&1; then
	print "ok"
    else
	print "run failed"
    fi
}


outf=/tmp/all$$.out
rm -f /tmp/all*.out
execute bitmap $outf bitmap.out
execute errcodes $outf
execute run_kvl $outf kvl.out
execute opaque $outf opaque.out
execute stats $outf stats.out
execute testserial $outf testserial.out
execute vectors $outf vectors.out

print
print "result in $outf"

