INCLUDE_DIRS += \
	$(STHREAD_INCL)		\
	$(FC_INCL)  

LIBRARY = \
	$(STHREAD_LIB)		\
	$(FC_LIB) 


all_target_files(tests)

remote_target($(STHREAD_LIB))

#define build_simple_test_exec(exec)			@@\
init_file_group(exec)					@@\
exec.cpp += exec.cpp					@@\
exec.libs += $(LIBRARY)					@@\
exec.exec_name = exec					@@\
build_test_exec(exec)					@@\
build_misc_poe_exec(exec)

build_simple_test_exec(thread1)
build_simple_test_exec(thread2)
build_simple_test_exec(thread3)
build_simple_test_exec(thread4)

build_simple_test_exec(ioperf)

build_simple_test_exec(diskinfo)

#ifdef IS_NT
tests: ;
#else
clean_files(diskrw)

tests:  diskrw

diskrw: ../diskrw
	$(CP) ../diskrw .
#endif

PURE_EXEC= thread1.pure thread2.pure thread3.pure thread4.pure
pure_exec: $(PURE_EXEC)

#ifdef IS_SP2
POE_EXEC= thread1.poe thread2.poe thread3.poe thread4.poe ioperf.poe
poe_exec: $(poe_EXEC)
#endif /* SP2 */

init_file_group(sthread_test_files)
sthread_test_files.other += all buncha_tests
used_group(sthread_test_files)
